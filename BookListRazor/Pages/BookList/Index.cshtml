@page
@model BookListRazor.Pages.BookList.IndexModel
@{
}

<br />
<div class="container row p-0 m-0">
    <div class="col-10">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-2">
        <a asp-page="Create" class="btn btn-outline-success btn-sm">Create</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">

            @if (Model.Books.Count() > 0)
            {

                <table class="table table-striped boarder">

                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Id"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Author"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().ISBN"></label>
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.Books)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.ISBN)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete the record?')" class="btn btn-danger btn-sm text-white" style="width: 60px;">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white" style="width: 60px;">Edit</a>
                            </td>
                        </tr>
                    }

                </table>

            }
            else
            {
                <p>No Books available.</p>
            }

        </form>

    </div>

    <br />
    <br />
    <br />
    <br />

    <div class=" col-12 border p-3">

        <table id="DT_Load" class="table table-striped table-bordered w-100">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Author</th>
                    <th>ISBN</th>
                </tr>
            </thead>
        </table>


    </div>

</div>

@section Scripts{

    <script src="~/js/bookList.js"></script>

}